<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/lblMessageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="8dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/si_SignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblHeader"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_round_corner"
        android:padding="12dp"
        android:singleLine="true"
        android:inputType="textPersonName"
        android:textColor="@color/purple_700" />

    <TextView
        android:id="@+id/lblHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblMessage"
        android:layout_alignStart="@+id/lblMessage"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Articles"
        android:paddingLeft="2dp"
        android:paddingRight="5dp"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblMessageTitle"
        android:layout_alignStart="@+id/lblMessageTitle"
        android:layout_alignEnd="@+id/lblMessageTitle"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="2dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>